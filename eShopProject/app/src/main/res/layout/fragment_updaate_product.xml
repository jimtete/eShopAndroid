<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdaateProductFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_marginTop="48dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE PRODUCT"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <EditText
        android:layout_marginTop="16dp"
        android:id="@+id/editText_update_product_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter id..." />

    <EditText
        android:id="@+id/editText_update_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="0"
        android:ems="10"
        android:hint="Enter name..."
        android:inputType="textPersonName"
        android:layout_gravity="center"/>

    <EditText
        android:layout_marginTop="8dp"
        android:id="@+id/editText_update_product_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:ems="10"
        android:inputType="number"
        android:layout_gravity="center"
        android:hint="Enter quantity..."/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:padding="16dp"
        android:id="@+id/radio_group_type_update">

        <RadioButton
            android:id="@+id/radio_movies_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Ταινία" />

        <RadioButton
            android:id="@+id/radio_shows_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Σειρά" />

    </RadioGroup>

    <Button
        android:id="@+id/button_update_product_submit"
        android:layout_marginTop="32dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="UPDATE BLU RAY"
        />

</LinearLayout>